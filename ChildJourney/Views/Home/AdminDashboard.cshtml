<script>
    function Unlock() {
        var buttons = document.querySelectorAll(".Dbutton");
        buttons.forEach(function (button) {
            button.disabled = false;
        });
        document.getElementById("Unlock").style.display = "none";
        document.getElementById("Lock").style.display = "block";
        document.getElementById("UnlockDB").style.display = "block";
    }
    function Lock() {
        var buttons = document.querySelectorAll(".Dbutton");
        buttons.forEach(function (button) {
            button.disabled = true;
        });
        document.getElementById("Unlock").style.display = "block";
        document.getElementById("Lock").style.display = "none";
        document.getElementById("UnlockDB").style.display = "none";
        document.getElementById("LockDB").style.display = "none";
        document.getElementById("DeleteDB").disabled = true;
    }
    function UnlockDB() {
        document.getElementById("DeleteDB").disabled = false;
        document.getElementById("UnlockDB").style.display = "none";
        document.getElementById("LockDB").style.display = "block";
    }
    function LockDB() {
        document.getElementById("DeleteDB").disabled = true;
        document.getElementById("UnlockDB").style.display = "block";
        document.getElementById("LockDB").style.display = "none";
    }
</script>